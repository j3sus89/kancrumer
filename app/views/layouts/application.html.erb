<!DOCTYPE html>
<html>
<head>
  <title>Kancrumer</title>
  <%= stylesheet_link_tag "token-input-facebook", "application", "jquery-ui-1.10.4.custom", media: 'all' %>
  <%= javascript_include_tag "application", "jquery-1.10.2", "jquery-ui-1.10.4.custom.min" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/flick/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">


  <style>

  .form-signin {
    max-width: 800px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }

  .form-signin .form-signin-heading{
    margin-bottom: 10px;
  }

  #feedback { font-size: 1.4em; }
  #sortable { list-style-type: none; margin: 5; padding: 0; }
  #sortable li { margin: 3px 3px 3px 0; padding: 1px; float: left; width: 170px; height: 250px; font-size: 4em; text-align: center; border: 5px solid #dcd9de; background: #F3F315}

  body {
    min-width: 520px;
  }
  .column {
    width: 170px;
    float: left;
    padding-bottom: 100px;
    background: #FFFFFF;
  }
  .portlet {
    margin: 0 1em 1em 0;
    padding: 0.3em;
    background: #FFFF00;
    margin: 0 0 0.4em;

  }
  .portlet-header {
    padding: 0.2em 0.3em;
    margin-bottom: 0.5em;
    position: relative;
    background: #99FF99;
  }
  .portlet-toggle {
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -8px;
  }
  .portlet-content {
    padding: 0.4em;
  }
  .portlet-placeholder {
    border: 1px dotted black;
    margin: 0 1em 1em 0;
    height: 50px;
  }
  #center {
    text-align: center;
  }
  #gallery { float: center; width: 100%; min-height: 12em; border: 5px solid #dcd9de;}
  .gallery.custom-state-active { background: #eee; }
  .gallery li { float: left; width: 70px; height: auto; padding: 0.3em; margin: 0.4em 0.3em 0.4em 0.4em; text-align: center; }
  .gallery li h5 { margin: 0 0 0.4em; }
  .gallery li a { float: centerVista co; }
  .gallery li a.ui-icon-zoomin { float: center; }
  .gallery li img { width: 100%; }
  .center-block {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  
  </style>

</head>

<body>

  <div class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <a class="brand" href="<%= root_path %>">Kancrumer</a>
        <div class="nav-collapse">
          <% if current_user %>
          <div class="btn-group pull-right">
            <a class="btn btn-primary"><i class="icon-user icon-white"></i> <%=current_user.email %> </a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="<%= user_path(current_user.id) %>"><i class="icon-pencil"></i> Edit</a></li>
              <li><a href="<%= logout_path %>"><i class="icon-remove-circle"></i> Log out</a></li>
            </ul>
          </div>
          <% end %>

          <ul class="nav">
            <% if current_user %>
            <li><a href="<%= projects_path %>"><i class="icon-folder-open"></i> Projects</a></li> 
            <% if current_user.role == "admin" %>
            <li><a href="<%= users_path %>"><i class="icon-user"></i> Users</a></li>
            <% end %>
            <% else %>
            <li><a href="<%= new_user_path %>"><i class="icon-chevron-right"></i> Register</a></li>
            <li><a href="<%= login_path %>"><i class="icon-chevron-right"></i> Login</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<p>
  <% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>

  <% end %>
</p>

<div class="container">
  <div class="row">
    <div class="span12"><%= yield %></div>
